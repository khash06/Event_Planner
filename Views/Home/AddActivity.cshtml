@using Belt.Models
@model Activities


<! doctype <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Add Activity</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
    <h1>Dojo Activity Center</h1>
    <h3>Create an Activity!</h3>
    <div class="container" style="max-width: 100px; margin: 30px auto;"></div>
        <form asp-action="CreateActivity" asp-controller="Home" method="post" role="form">
            <div class="form-group row">
                <span asp-validation-for="Title"></span>
                <label asp-for="Title">Title:</label>
                <input asp-for="Title" class="form-control">
            </div>
            <div class="form-group row">
                <span asp-validation-for="StartTime"></span>
                <label asp-for="StartTime">Time:</label>
                <input asp-for="StartTime" type="time" class="form-control">
            </div>    
            <div class="form-group row">
                <span asp-validation-for="Date"></span>
                <label asp-for="Date">Date:</label>
                <input type="date" asp-for="Date" class="form-control">
            </div>
            <div class="form-group row">
                <span asp-validation-for="Duration"></span>
                <label asp-for="Duration">Duration:</label>
                <input asp-for="Duration" class="form-control">
            </div>
            <div class="form-group row">
                <span asp-validation-for="HrMin"></span>
                <select asp-for="HrMin" id="" class="form-control">
                    <option value="Days">Days</option>
                    <option value="Hours">Hours</option>
                    <option value="Minutes">Minutes</option>
                </select>
            </div>
            <div class="form-group row">    
                <span asp-validation-for="Descripton"></span>
                <label asp-for="Descripton">Description</label>
                <textarea asp-for="Descripton" id="" cols="50" rows="4" class="form-control"></textarea>
            </div>

            <input type="submit" value="Create Activity" class="btn btn-primary">
        </form>
    
    <a href="DashboardPage">Home</a> |
    <a href="LogOff">Log Off</a>
</body>
</html>